    echo -e "${CYAN}â”‚${NC}  ${WHITE}12)${NC} View Logs                                                  ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â”‚${NC}  ${WHITE}13)${NC} Health Check Status                                        ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â”‚${NC}  ${WHITE}0)${NC}  Exit                                                       ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
}

# ============================================
# Menu Actions
# ============================================

action_list_profiles() {
    clear
    print_banner

    echo -e "${CYAN}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${CYAN}â”‚${NC} ${BOLD}PROFILE LIST${NC}                                                    ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤${NC}"

    if [[ ! -d "${BASE_DIR}/profiles" ]] || [[ -z "$(ls -A ${BASE_DIR}/profiles 2>/dev/null)" ]]; then
        echo -e "${CYAN}â”‚${NC} ${YELLOW}No profiles found${NC}                                             ${CYAN}â”‚${NC}"
    else
        printf "${CYAN}â”‚${NC} ${WHITE}%-3s %-12s %-20s %-8s %-10s${NC}    ${CYAN}â”‚${NC}\n" "#" "Name" "Domain" "Status" "Expired"
        echo -e "${CYAN}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤${NC}"

        local i=1
        for profile_dir in "${BASE_DIR}/profiles"/*; do
            if [[ -d "$profile_dir" ]]; then
                local profile_name=$(basename "$profile_dir")
                local domain=$(get_profile_meta "$profile_name" "DOMAIN")
                local expire_date=$(get_profile_meta "$profile_name" "EXPIRED")
                local status=$(get_profile_meta "$profile_name" "STATUS")

                # Calculate expiration
                local days_left=$(days_until_expiration "$expire_date")
                local expire_display
                if (( days_left <= 0 )); then
                    expire_display="${RED}Expired${NC}"
                elif (( days_left <= 5 )); then
                    expire_display="${YELLOW}${days_left}d left${NC}"
                else
                    expire_display="${GREEN}${days_left}d left${NC}"
                fi

                # Status color
                local status_display
                if [[ "$status" == "active" ]]; then
                    status_display="${GREEN}Active${NC}"
                else
                    status_display="${RED}Stopped${NC}"
                fi

                printf "${CYAN}â”‚${NC} ${WHITE}%-3d${NC} %-12s %-20s " $i "$profile_name" "$domain"
                echo -e "$status_display   $expire_display     ${CYAN}â”‚${NC}"

                i=$((i + 1))
            fi
        done
    fi

    echo -e "${CYAN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
    press_any_key
}

