# ============================================
# VPN MULTI-PROFILE MANAGER - Configuration
# ============================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
TELEGRAM_CHAT_ID="YOUR_CHAT_ID_HERE"

# AWS S3 Backup Configuration
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_REGION="ap-southeast-1"
AWS_BUCKET_NAME="your-backup-bucket"
S3_BACKUP_ENABLED="true"

# Rclone Backup Configuration
RCLONE_REMOTE="gdrive"  # or uloz, proton, etc
RCLONE_BACKUP_PATH="VPN-Backups"
RCLONE_BACKUP_ENABLED="true"

# Backup Encryption (optional)
BACKUP_ENCRYPTION="false"
BACKUP_ENCRYPTION_PASSWORD=""

# Global Settings
MAX_PROFILES=10
DOCKER_NETWORK="vpn-network"
DOCKER_SUBNET="172.20.1.0/24"
BASE_IP="172.20.1"

# SSH Port Range for Profiles
SSH_PORT_START=2200
SSH_PORT_END=2333

# Main VPS SSH Ports
MAIN_VPS_SSH_PORT_1=4444
MAIN_VPS_SSH_PORT_2=4455

# Xray Configuration
XRAY_VERSION="v25.10.15"

# ACME/SSL Configuration
ACME_EMAIL="admin@yourdomain.com"
ACME_CHALLENGE_PORT=8080
SSL_RENEW_DAYS=60

# Log Settings
LOG_MAX_SIZE="100M"
LOG_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_INTERVAL=300  # seconds
BANDWIDTH_CHECK_INTERVAL=3600  # 1 hour
EXPIRATION_CHECK_TIME="00:00"  # daily at midnight

# IPinfo.io API Token (optional - for IP geolocation)
IPINFO_TOKEN=""
